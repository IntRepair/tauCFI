# Exim test configuration 1005

exim_path = EXIM_PATH
host_lookup_order = bydns
rfc1413_query_timeout = 0s
spool_directory = DIR/spool
log_file_path = DIR/spool/log/%slog
gecos_pattern = ""
gecos_name = CALLER_NAME

# ----- Main settings -----

dns_ipv4_lookup = eximtesthost.ipv6.test.ex


# ----- Routers -----

begin routers


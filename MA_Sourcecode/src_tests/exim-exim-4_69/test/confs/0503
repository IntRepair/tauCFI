# ----- Routers -----

begin routers

r1:
  driver = accept
  transport = t1


# ----- Transports -----

begin transports

t1:
  driver = appendfile
  file = DIR/test-mail/$local_part
  user = CALLER
  quota = 1000
  MSIZE


# ----- Retry -----

begin retry

* *  F,1d,1d


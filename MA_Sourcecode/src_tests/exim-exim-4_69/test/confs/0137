# Exim test configuration 0137

exim_path = EXIM_PATH
host_lookup_order = bydns
rfc1413_query_timeout = 0s
spool_directory = DIR/spool
log_file_path = DIR/spool/log/%slog
gecos_pattern = ""
gecos_name = CALLER_NAME

# ----- Main settings -----

domainlist local_domains = test.ex
qualify_domain = test.ex


# ----- Routers -----

begin routers

smart:
  driver = accept
  retry_use_local_part
  transport = $h_transport:


# ----- Transports -----

begin transports

local_delivery:
  driver = appendfile
  file = DIR/test-mail/$local_part
  lock_interval = 1s
  lock_retries = 2
  user = CALLER

local_delivery_fcntl:
  driver = appendfile
  file = DIR/test-mail/$local_part
  lock_interval = 1s
  lock_retries = 2
  no_use_lockfile
  user = CALLER

local_delivery_fcntl_blocking:
  driver = appendfile
  file = DIR/test-mail/$local_part
  lock_fcntl_timeout = 2s
  lock_interval = 1s
  lock_retries = 2
  no_use_lockfile
  user = CALLER


# ----- Retry -----

begin retry

*        *  F,4d,4d


# End

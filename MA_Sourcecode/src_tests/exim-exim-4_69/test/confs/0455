# Exim test configuration 0455

HOSTS_MAX_TRY=4

exim_path = EXIM_PATH
host_lookup_order = bydns
rfc1413_query_timeout = 0s
spool_directory = DIR/spool
log_file_path = DIR/spool/log/%slog
gecos_pattern = ""
gecos_name = CALLER_NAME

# ----- Main settings -----

acl_not_smtp = non

ignore_bounce_errors_after = 0s
qualify_domain = test.ex
disable_ipv6


# ----- ACLs -----

begin acl

non:
  warn senders = :
       control = queue_only
  accept


# ----- Routers -----

begin routers

r1:
  driver = dnslookup
  transport = smtp


# ----- Transports -----

begin transports

smtp:
  driver = smtp
  connect_timeout = 1s
  hosts_max_try = HOSTS_MAX_TRY


# ----- Retry -----

begin retry

*                *  F,2s,1s

# End

# ----- Routers -----

begin routers

smart:
  driver = accept
  require_files = ! DIR/aux-fixed/TESTNUM.$local_part
  retry_use_local_part
  verify_only

forward:
  driver = redirect
  file = DIR/aux-fixed/TESTNUM.$local_part
  redirect_router = localuser
  require_files = DIR/aux-fixed/TESTNUM.$local_part
  retry_use_local_part

localuser:
  driver = accept
  local_parts = userx
  verify_only


# End

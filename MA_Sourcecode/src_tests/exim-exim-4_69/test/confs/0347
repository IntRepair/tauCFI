# Exim test configuration 0347

exim_path = EXIM_PATH
host_lookup_order = bydns
rfc1413_query_timeout = 0s
spool_directory = DIR/spool
log_file_path = DIR/spool/log/%slog
gecos_pattern = ""
gecos_name = CALLER_NAME

# ----- Main settings -----

domainlist local_domains = test.ex

qualify_domain = test.ex


# ----- Routers -----

begin routers

r1:
  driver = manualroute
  self = pass
  route_list = * 127.0.0.1

r2:
  driver = accept
  transport = t1



# ----- Transports -----

begin transports

t1:
  driver = appendfile
  batch_max = 100
  file = /dev/null
  user = CALLER


# ----- Retry -----


begin retry

*         *        F,1d,15m

# End

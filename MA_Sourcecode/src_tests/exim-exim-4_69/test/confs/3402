    ${if or {\
      {and {{eq{$2}{userx}}{eq{$3}{secret}}}}\
      {and {{eq{$2}{usery}}{eq{$3}{ab?}}}}\
    }\
    {yes}{no}}
  server_set_id = $2
  server_mail_auth_condition = ${if eq{$authenticated_id}{userx}{yes}}


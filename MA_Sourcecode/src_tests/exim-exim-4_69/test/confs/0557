# ----- Main settings -----


# ----- Routers -----

begin routers

r1:
  driver = manualroute
  route_list = * HOSTS
X host_find_failed = ignore
Y host_all_ignored = HAI
  no_more
  self = send
  transport = t1

r2:
  driver = accept
  transport = t2


# ----- Transports -----

begin transports

t1:
  driver = smtp

t2:
  driver = appendfile
  file = /dev/null


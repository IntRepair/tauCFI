rfc1413_query_timeout = 0s
spool_directory = DIR/spool
log_file_path = DIR/spool/log/%slog
gecos_pattern = ""
gecos_name = CALLER_NAME

# ----- Main settings -----


# ----- Routers -----

begin routers

all:
  driver = accept
  transport = remote_smtp


# ----- Transports -----

begin transports

remote_smtp:
  driver = smtp
  hosts = 127.0.0.1
  allow_localhost
  port = PORT_N


# ----- Retry -----


begin retry

* * F,5d,10m


# End
